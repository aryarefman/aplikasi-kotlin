<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:paddingBottom="8dp"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kalkulator Geometri"
            android:textSize="28sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/sen_bold"
            android:textAlignment="center"
            android:layout_marginBottom="8dp"
            android:letterSpacing="0.02"
            android:shadowColor="#40000000"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="4"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hitung luas bangun datar dengan mudah dan akurat"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/sen_regular"
            android:textAlignment="center"
            android:alpha="0.9"
            android:lineSpacingExtra="4dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#80FFFFFF"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Link Edukasi"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/sen_bold"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>

    <HorizontalScrollView
        android:id="@+id/educational_links_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="8dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/educational_links_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/edu_link_1"
                android:layout_width="160dp"
                android:layout_height="90dp"
                android:layout_margin="8dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#AAFFFFFF">

                <ImageView
                    android:id="@+id/thumbnail_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:contentDescription="YouTube Thumbnail for Persegi"
                    android:src="@drawable/ic_launcher_background" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/edu_link_2"
                android:layout_width="160dp"
                android:layout_height="90dp"
                android:layout_margin="8dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#AAFFFFFF">

                <ImageView
                    android:id="@+id/thumbnail_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:contentDescription="YouTube Thumbnail for Segitiga"
                    android:src="@drawable/ic_launcher_background" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/edu_link_3"
                android:layout_width="160dp"
                android:layout_height="90dp"
                android:layout_margin="8dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#AAFFFFFF">

                <ImageView
                    android:id="@+id/thumbnail_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:contentDescription="YouTube Thumbnail for Lingkaran"
                    android:src="@drawable/ic_launcher_background" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/edu_link_4"
                android:layout_width="160dp"
                android:layout_height="90dp"
                android:layout_margin="8dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#AAFFFFFF">

                <ImageView
                    android:id="@+id/thumbnail_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:contentDescription="YouTube Thumbnail for Belah Ketupat"
                    android:src="@drawable/ic_launcher_background" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/edu_link_5"
                android:layout_width="160dp"
                android:layout_height="90dp"
                android:layout_margin="8dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#AAFFFFFF">

                <ImageView
                    android:id="@+id/thumbnail_5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:contentDescription="YouTube Thumbnail for Elips"
                    android:src="@drawable/ic_launcher_background" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </HorizontalScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#80FFFFFF"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pilih Bangun Datar"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/sen_bold"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:alignmentMode="alignMargins"
            android:useDefaultMargins="true"
            android:layout_margin="4dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_persegi"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#AAFFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <FrameLayout
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/circle_background">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_square" />

                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Persegi"
                        android:textSize="16sp"
                        android:textColor="#ffffff"
                        android:fontFamily="@font/sen_regular"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="s²"
                        android:textSize="14sp"
                        android:textColor="#E91E63"
                        android:fontFamily="@font/sen_bold"
                        android:textStyle="bold"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:background="@drawable/bg_formula"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:layout_gravity="center"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_persegi_panjang"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#AAFFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <FrameLayout
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/circle_background">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_rectangle" />

                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Persegi Panjang"
                        android:textSize="16sp"
                        android:textColor="#ffffff"
                        android:fontFamily="@font/sen_regular"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="p × l"
                        android:textSize="14sp"
                        android:textColor="#2196F3"
                        android:fontFamily="@font/sen_bold"
                        android:textStyle="bold"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="6dp"
                        android:minWidth="72dp"
                        android:gravity="center"
                        android:background="@drawable/bg_formula"
                        android:layout_marginTop="4dp"
                        android:layout_gravity="center"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_segitiga"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#AAFFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <FrameLayout
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/circle_background">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_triangle" />

                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Segitiga"
                        android:textSize="16sp"
                        android:textColor="#ffffff"
                        android:fontFamily="@font/sen_regular"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="½ × a × t"
                        android:textSize="14sp"
                        android:textColor="#4CAF50"
                        android:fontFamily="@font/sen_bold"
                        android:textStyle="bold"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="6dp"
                        android:minWidth="72dp"
                        android:gravity="center"
                        android:background="@drawable/bg_formula"
                        android:layout_marginTop="4dp"
                        android:layout_gravity="center"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_jajar_genjang"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#AAFFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <FrameLayout
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/circle_background">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_parallelogram" />

                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jajar Genjang"
                        android:textSize="16sp"
                        android:textColor="#ffffff"
                        android:fontFamily="@font/sen_regular"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="a × t"
                        android:textSize="14sp"
                        android:textColor="#9C27B0"
                        android:fontFamily="@font/sen_bold"
                        android:textStyle="bold"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="6dp"
                        android:minWidth="72dp"
                        android:gravity="center"
                        android:background="@drawable/bg_formula"
                        android:layout_marginTop="4dp"
                        android:layout_gravity="center"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_trapesium"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#AAFFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <FrameLayout
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/circle_background">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_trapezium" />

                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trapesium"
                        android:textSize="16sp"
                        android:textColor="#ffffff"
                        android:fontFamily="@font/sen_regular"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="½ × (a+b) × t"
                        android:textSize="14sp"
                        android:textColor="#FF9800"
                        android:fontFamily="@font/sen_bold"
                        android:textStyle="bold"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="6dp"
                        android:minWidth="72dp"
                        android:gravity="center"
                        android:background="@drawable/bg_formula"
                        android:layout_marginTop="4dp"
                        android:layout_gravity="center"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_layang_layang"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#AAFFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <FrameLayout
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/circle_background">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_kite" />

                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Layang-Layang"
                        android:textSize="16sp"
                        android:textColor="#ffffff"
                        android:fontFamily="@font/sen_regular"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="½ × d₁ × d₂"
                        android:textSize="14sp"
                        android:textColor="#FFC107"
                        android:fontFamily="@font/sen_bold"
                        android:textStyle="bold"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="6dp"
                        android:minWidth="72dp"
                        android:gravity="center"
                        android:background="@drawable/bg_formula"
                        android:layout_marginTop="4dp"
                        android:layout_gravity="center"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_belah_ketupat"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#AAFFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <FrameLayout
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/circle_background">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_rhombus" />

                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Belah Ketupat"
                        android:textSize="16sp"
                        android:textColor="#ffffff"
                        android:fontFamily="@font/sen_regular"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="½ × d₁ × d₂"
                        android:textSize="14sp"
                        android:textColor="#00BCD4"
                        android:fontFamily="@font/sen_bold"
                        android:textStyle="bold"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="6dp"
                        android:minWidth="72dp"
                        android:gravity="center"
                        android:background="@drawable/bg_formula"
                        android:layout_marginTop="4dp"
                        android:layout_gravity="center"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_lingkaran"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#AAFFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <FrameLayout
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/circle_background">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_circle" />

                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lingkaran"
                        android:textSize="16sp"
                        android:textColor="#ffffff"
                        android:fontFamily="@font/sen_regular"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="π × r²"
                        android:textSize="14sp"
                        android:textColor="#FF5722"
                        android:fontFamily="@font/sen_bold"
                        android:textStyle="bold"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="6dp"
                        android:minWidth="72dp"
                        android:gravity="center"
                        android:background="@drawable/bg_formula"
                        android:layout_marginTop="4dp"
                        android:layout_gravity="center"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_elips"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#AAFFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <FrameLayout
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/circle_background">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_ellipse" />

                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Elips"
                        android:textSize="16sp"
                        android:textColor="#ffffff"
                        android:fontFamily="@font/sen_regular"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="π × a × b"
                        android:textSize="14sp"
                        android:textColor="#607D8B"
                        android:fontFamily="@font/sen_bold"
                        android:textStyle="bold"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="6dp"
                        android:minWidth="72dp"
                        android:gravity="center"
                        android:background="@drawable/bg_formula"
                        android:layout_marginTop="4dp"
                        android:layout_gravity="center"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </GridLayout>
    </ScrollView>
</LinearLayout>